{
  "title": "stevearc's mac fixes",
  "rules": [
    {
      "description": "Swap Cmd+tab and Cmd+tilde",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_gui"]
            },
            "key_code": "tab"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["left_gui"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_gui"]
            },
            "key_code": "grave_accent_and_tilde"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "tab",
              "modifiers": ["left_gui"]
            }
          ]
        }
      ]
    },
    {
      "description": "Cmd+Shift+R for spotlight",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_gui", "left_shift"]
            },
            "key_code": "r"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "spacebar",
              "modifiers": ["left_gui"]
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+Shift+v to paste in terminal",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_control", "left_shift"]
            },
            "key_code": "v"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["org.alacritty", "com.apple.Terminal", "com.googlecode.iterm2"]
            }
          ],
          "to": [
            {
              "repeat": false,
              "key_code": "v",
              "modifiers": ["left_gui"]
            }
          ]
        }
      ]
    },
