[user]
    name = Steven Arcangeli
    email = arcangeli07@gmail.com
[color]
    ui = auto
[alias]
	st = status
	ci = commit
	co = checkout
	cob = checkout -b
    des = describe --tags
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
    head = !git l -1
    h = !git head
	r = !git l -20
	ra = !git r --all
    ff = merge --ff-only
	pullff = pull --ff-only
	pr = pull --rebase
    noff = merge --no-ff
	l = !bash ~/.githelpers pretty_git_log
	la = !git l --all
    div = divergence
    gn = goodness
    gnc = goodness --cached
	fa = fetch --all
    pom = push origin master
	b = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
	s = submodule
	su = submodule update --init --recursive
	rp = rev-parse --verify
	am = commit --amend
    delmerged = !git branch --merged | grep -v master | xargs git branch -d

[merge]
    tool = vimdiff
