#!/bin/bash
set -e

if [ -z "$PIBOX_IP" ]; then
  echo "You must set the PIBOX_IP environment variable"
  exit 1
fi

main() {
  local cmd="${1}"
  local usage="pibox [ssh|vnc|jellyfin|transmission|proxy]"
  case $cmd in
    s*) # ssh
      ssh "$PIBOX_IP"
      ;;
    v*) # vnc
      vncviewer "$PIBOX_IP:5900"
      ;;
    j*) # jellyfin
      open "http://$PIBOX_IP:8096"
      ;;
    t*) # transmission
      open "http://$PIBOX_IP:9091"
      ;;
    p*) # proxy
      ssh -N -D 9080 "$PIBOX_IP"
      ;;
    h)
      echo "$usage"
      exit 0
      ;;
    *)
      echo "$usage"
      exit 1
      ;;
  esac
}

main "$@"
