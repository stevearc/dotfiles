[user]
    name = Steven Arcangeli
    email = stevearc@stevearc.com
[color]
    ui = auto
[alias]
    st = status
    ci = commit
    co = checkout
    cob = checkout -b
    com = checkout master
    des = describe --tags
    di = diff
    dc = diff --cached
    ab = rebase --abort
    abort = rebase --abort
    amend = commit --amend
    am = commit --amend
    ama = commit --amend -a
    aa = add --all
    head = !git l -1
    h = !git head
    r = !git l -20
    ra = !git r --all
    ff = merge --ff-only
    pullff = pull --ff-only
    pr = pull --rebase
    noff = merge --no-ff
    l = !bash ~/.githelpers pretty_git_log
    la = !git l --all
    div = divergence
    gn = goodness
    gnc = goodness --cached
    f = fetch -p
    fa = fetch --all
    po = !bash ~/.githelpers push_current_branch
    pom = push origin master
    b = branch
    ba = branch -a
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
    s = submodule
    su = submodule update --init --recursive
    rp = rev-parse --verify
    delmerged = !git branch --merged | grep -v master | grep -v develop | xargs git branch -d
    uu = !bash ~/.githelpers update_master
    rom = !git fetch && git rebase origin/master
    ss = show --stat
    dopr = !bash ~/.githelpers create_pull_request
    fix = !bash ~/.githelpers commit_fix

[merge]
    tool = vimdiff
